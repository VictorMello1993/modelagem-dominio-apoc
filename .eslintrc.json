{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
      "quotes": [2, "double", {"avoidEscape": true}],
      "semi": [2, "always"],
      "space-before-function-paren": "off",
      "camelcase": "off",
      "no-useless-constructor": "off",
      "no-undef": "off",
      "no-new": "warn",
      "no-unused-vars": "warn",
    }
}
